includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - database/
        - routes/
    
    # Level 0 is the least strict, allowing gradual improvement
    # Start with level 0 and gradually increase
    level: 7
    
    # Ignore vendor and generated files
    excludePaths:
        - vendor/
        - storage/
        - bootstrap/cache/
