includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - database/
        - routes/
    
    # Level 5 is recommended for gradual adoption
    # Level 0-4: Too permissive
    # Level 5: Good starting point for most projects
    # Level 6-9: Very strict, may require significant refactoring
    level: 5
    
    # Ignore vendor and generated files
    excludePaths:
        - vendor/
        - storage/
        - bootstrap/cache/
